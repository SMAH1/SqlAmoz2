{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sqlamoz2",
  "version": "0.1.0",
  "identifier": "com.smah1.sqlamoz2",
  "build": {
    "beforeDevCommand": "pnpm start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist/sqlamoz2/browser"
  },
  "app": {
    "windows": [
      {
        "title": "SqlAmoz2",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "cli": {
      "description": "SQL Amoz 2 - SQL Training Application",
      "args": [
        {
          "name": "form",
          "short": "f",
          "takesValue": true,
          "description": "Select form: select, where, orderby, limit, from, query"
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
